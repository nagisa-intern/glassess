<p id="notice"><%= notice %></p>

<h1>Comic Authors</h1>

<table>
  <thead>
    <tr>
      <th>Comic</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comic_authors.each do |comic_author| %>
      <tr>
        <td><%= comic_author.comic %></td>
        <td><%= comic_author.author %></td>
        <td><%= link_to 'Show', comic_author %></td>
        <td><%= link_to 'Edit', edit_comic_author_path(comic_author) %></td>
        <td><%= link_to 'Destroy', comic_author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

